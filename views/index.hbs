<div class="container mt-5">
    <div class="row">
        <form action="/" method="post" enctype="multipart/form-data">
            <label for="" style="margin-left: 280px;">To Do</label>
            <input type="text" name="ToDo" id="ToDo">
            <button type="submit" class="btn btn-outline-success" id="bt">Add</button>
            <br>
        </form>
    </div>
    <div class="row mt-2">
        <table class="table mt-5" id="ToDoTable" style="background-color:burlywood;">
            <thead>
                <tr>
                    <th scope="col">ToDo List</th>
                </tr>
            </thead>
            <tbody>
                {{#each allToDo}}
                <tr>
                    <td>{{this.ToDo}}</td>
                    <td style="text-align: right ;">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault" />
                            <label class="form-check-label" for="flexCheckDefault">Done</label>
                        </div>

                        <a href="/delete-ToDo/{{this._id}}" class="btn btn-danger"
                            onclick="return confirm('are you want to delete ?')">Delete</a>
                    </td>


                </tr>
                {{/each}}

            </tbody>
        </table>
    </div>
    </section>

    <script>
        $(document).ready(function () {
            $('#ToDoTable').DataTable();
        });
    </script>
    </table>
</div>
</div>